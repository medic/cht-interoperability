          </text>
          <text id="/data/init/select_generated_name/g10_district:label">
            <value><output value=" /data/g40_clinic/contact/contact_name "/>'s District</value>
          </text>
          <text id="/data/init/select_generated_name/g20_municipality:label">
            <value><output value=" /data/g40_clinic/contact/contact_name "/>'s Municipality</value>
          </text>
          <text id="/data/init/select_generated_name/g30_health_center:label">
            <value><output value=" /data/g40_clinic/contact/contact_name "/>'s Health Center</value>
          </text>
          <text id="/data/init/select_generated_name/g40_clinic:label">
            <value><output value=" /data/g40_clinic/contact/contact_name "/>'s Area</value>
          </text>
          <text id="/data/inputs/user/contact_id:label">
            <value>Contact ID of the logged in user</value>
          </text>
          <text id="/data/inputs/user/facility_id:label">
            <value>Place ID of the logged in user</value>
          </text>
          <text id="/data/inputs/user/name:label">
            <value>Name of the logged in user</value>
          </text>
        </translation>
        <translation lang="ne">
          <text id="/data/g40_clinic/contact/_id:hint">
            <value>प्राथमिक सम्पर्क व्यक्ति छान्नुहोस्</value>
