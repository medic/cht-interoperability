            <value>लग इन गरेको प्रयोगकर्ताको नाम</value>
          </text>
        </translation>
      </itext>
      <instance>
        <data id="contact:g40_clinic:edit" prefix="J1!contact:g40_clinic:edit!" delimiter="#" version="2024-07-04 12-53">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <user>
              <contact_id/>
              <facility_id/>
              <name/>
            </user>
          </inputs>
          <g40_clinic>
            <parent/>
            <type/>
            <contact>
              <name/>
              <contact_name/>
              <_id/>
              <role/>
            </contact>
            <is_name_generated/>
            <generated_name/>
            <name/>
            <external_id/>
            <notes/>
            <geolocation/>
            <meta tag="hidden">
              <created_by/>
              <created_by_person_uuid/>
              <created_by_place_uuid/>
              <last_edited_by/>
              <last_edited_by_person_uuid/>
              <last_edited_by_place_uuid/>
            </meta>
          </g40_clinic>
          <init>
            <place_type/>
            <place_type_translation/>
            <select_generated_name/>
            <generated_name_translation/>
          </init>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </data>
      </instance>
      <bind nodeset="/data/inputs/user" relevant="false()"/>
      <bind nodeset="/data/inputs/user/contact_id" type="string"/>
      <bind nodeset="/data/inputs/user/facility_id" type="string"/>
      <bind nodeset="/data/inputs/user/name" type="string"/>
      <bind nodeset="/data/g40_clinic/parent" type="string" readonly="true()"/>
      <bind nodeset="/data/g40_clinic/type" type="string" readonly="true()"/>
      <bind nodeset="/data/g40_clinic/contact/name" type="string"/>
      <bind nodeset="/data/g40_clinic/contact/contact_name" type="string" calculate="../name"/>
      <bind nodeset="/data/g40_clinic/contact/_id" type="string" jr:constraintMsg="jr:itext('/data/g40_clinic/contact/_id:jr:constraintMsg')" constraint=" /data/g40_clinic/contact/role  = 'chw' or  /data/g40_clinic/contact/role  = 'other'"/>
      <bind nodeset="/data/g40_clinic/contact/role" type="string"/>
      <bind nodeset="/data/g40_clinic/is_name_generated" type="select1" calculate="if(  /data/g40_clinic/generated_name  = ../name, 'true', 'false')" relevant="not( /data/g40_clinic/contact/_id ) or selected( . , 'true') or boolean( /data/g40_clinic/contact/_id )" required="true()" readonly="boolean( /data/g40_clinic/contact/_id )"/>
      <bind nodeset="/data/g40_clinic/generated_name" type="string" calculate=" /data/init/generated_name_translation "/>
      <bind nodeset="/data/g40_clinic/name" type="string" relevant="boolean( /data/g40_clinic/contact/_id ) or not( /data/g40_clinic/contact/_id ) or not(selected( /data/g40_clinic/is_name_generated , 'true'))" required="true()" calculate="if(  /data/g40_clinic/is_name_generated  = 'true',  /data/g40_clinic/generated_name , .)"/>
      <bind nodeset="/data/g40_clinic/external_id" type="string"/>
      <bind nodeset="/data/g40_clinic/notes" type="string"/>
      <bind nodeset="/data/g40_clinic/geolocation" type="string" calculate="concat(../../inputs/meta/location/lat, concat(' ', ../../inputs/meta/location/long))"/>
      <bind nodeset="/data/g40_clinic/meta/created_by" type="string" readonly="true()"/>
      <bind nodeset="/data/g40_clinic/meta/created_by_person_uuid" type="string" readonly="true()"/>
      <bind nodeset="/data/g40_clinic/meta/created_by_place_uuid" type="string"/>
      <bind nodeset="/data/g40_clinic/meta/last_edited_by" type="string" calculate="../../../inputs/user/name"/>
      <bind nodeset="/data/g40_clinic/meta/last_edited_by_person_uuid" type="string" calculate="../../../inputs/user/contact_id"/>
      <bind nodeset="/data/g40_clinic/meta/last_edited_by_place_uuid" type="string" calculate="../../../inputs/user/facility_id"/>
      <bind nodeset="/data/init/place_type" type="select1" calculate="&quot;g40_clinic&quot;"/>
      <bind nodeset="/data/init/place_type_translation" type="string" calculate="jr:choice-name( /data/init/place_type ,' /data/init/place_type ')"/>
      <bind nodeset="/data/init/select_generated_name" type="select1" calculate="&quot;g40_clinic&quot;"/>
      <bind nodeset="/data/init/generated_name_translation" type="string" calculate="if (boolean( /data/g40_clinic/contact/_id ), jr:choice-name( /data/init/select_generated_name ,' /data/init/select_generated_name '), '')"/>
      <bind nodeset="/data/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
    </model>
  </h:head>
  <h:body>
    <group ref="/data/inputs">
      <group ref="/data/inputs/user">
        <input ref="/data/inputs/user/contact_id">
          <label ref="jr:itext('/data/inputs/user/contact_id:label')"/>
        </input>
        <input ref="/data/inputs/user/facility_id">
          <label ref="jr:itext('/data/inputs/user/facility_id:label')"/>
        </input>
        <input ref="/data/inputs/user/name">
          <label ref="jr:itext('/data/inputs/user/name:label')"/>
        </input>
      </group>
    </group>
    <group appearance="field-list" ref="/data/g40_clinic">
      <group ref="/data/g40_clinic/contact">
        <input appearance="select-contact type-person descendant-of-current-contact" ref="/data/g40_clinic/contact/_id">
          <label ref="jr:itext('/data/g40_clinic/contact/_id:label')"/>
          <hint ref="jr:itext('/data/g40_clinic/contact/_id:hint')"/>
        </input>
      </group>
      <select1 appearance="columns-pack" ref="/data/g40_clinic/is_name_generated">
        <label ref="jr:itext('/data/g40_clinic/is_name_generated:label')"/>
        <item>
          <label ref="jr:itext('/data/g40_clinic/is_name_generated/true:label')"/>
          <value>true</value>
        </item>
        <item>
          <label ref="jr:itext('/data/g40_clinic/is_name_generated/false:label')"/>
          <value>false</value>
        </item>
      </select1>
      <input ref="/data/g40_clinic/name"/>
      <input appearance="FALSE" ref="/data/g40_clinic/external_id">
        <label ref="jr:itext('/data/g40_clinic/external_id:label')"/>
      </input>
      <input appearance="multiline" ref="/data/g40_clinic/notes">
        <label ref="jr:itext('/data/g40_clinic/notes:label')"/>
      </input>
      <group appearance="hidden" ref="/data/g40_clinic/meta"/>
    </group>
    <group appearance="field-list hidden" ref="/data/init">
      <select1 appearance="hidden" ref="/data/init/place_type">
        <item>
          <label ref="jr:itext('/data/init/place_type/g10_district:label')"/>
          <value>g10_district</value>
        </item>
        <item>
          <label ref="jr:itext('/data/init/place_type/g20_municipality:label')"/>
          <value>g20_municipality</value>
        </item>
        <item>
          <label ref="jr:itext('/data/init/place_type/g30_health_center:label')"/>
          <value>g30_health_center</value>
        </item>
        <item>
          <label ref="jr:itext('/data/init/place_type/g40_clinic:label')"/>
          <value>g40_clinic</value>
        </item>
      </select1>
      <select1 appearance="hidden" ref="/data/init/select_generated_name">
        <item>
          <label ref="jr:itext('/data/init/select_generated_name/g10_district:label')"/>
          <value>g10_district</value>
        </item>
        <item>
          <label ref="jr:itext('/data/init/select_generated_name/g20_municipality:label')"/>
          <value>g20_municipality</value>
        </item>
        <item>
          <label ref="jr:itext('/data/init/select_generated_name/g30_health_center:label')"/>
          <value>g30_health_center</value>
        </item>
        <item>
          <label ref="jr:itext('/data/init/select_generated_name/g40_clinic:label')"/>
          <value>g40_clinic</value>
        </item>
      </select1>
    </group>
  </h:body>
</h:html>
